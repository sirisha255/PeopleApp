@model CreateCountryViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Country</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" asp-route-id="@ViewBag.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <input type="text" asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <a asp-action="Index" class="btn btn-dark mr-2">Back to Country list</a>
            <button class="btn btn-dark">Update</button>
        </form>
    </div>
</div>
